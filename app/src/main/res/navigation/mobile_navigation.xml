<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.lingobuddypck.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_saved_words"
            app:destination="@id/navigation_saved_words"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_saved_words"
        android:name="com.example.lingobuddypck.ui.dictionary.SavedWordsFragment"
        tools:layout="@layout/fragment_saved_words" >
        <action
            android:id="@+id/action_navigation_saved_words_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.lingobuddypck.ui.setting.SettingFragment"
        tools:layout="@layout/fragment_setting" />
</navigation>