<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="8dp"
    android:paddingEnd="16dp">
    <ImageView
        android:id="@+id/avatarAI"
        android:layout_width="59dp"
        android:layout_height="65dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_white_bg"
        android:contentDescription="Avatar AI"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_ai" />
    <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bubble_left" android:paddingStart="12dp"
    android:paddingTop="10dp"
    android:paddingEnd="12dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/typingIndicatorImageView"
        android:layout_width="wrap_content"  android:layout_height="wrap_content" android:src="@drawable/avd_typing_indicator_animation"
        android:contentDescription="AI is typing" />
</FrameLayout>
</LinearLayout>